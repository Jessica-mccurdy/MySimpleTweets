<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ComposeActivity">


    <EditText
        android:id="@+id/et_simple"
        android:layout_width="402dp"
        android:layout_height="669dp"
        android:layout_marginTop="5dp"
        android:hint="What is on your mind?"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button"></EditText>

    <Button
        android:id="@+id/button"
        android:layout_width="79dp"
        android:layout_height="76dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/ic_vector_compose"
        android:onClick="onSubmitTweet"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/et_simple"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible"></Button>

</android.support.constraint.ConstraintLayout>